<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/deep_pipe_green"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUPERBESTPROJECT 666"
                android:fontFamily="@font/ostrich"
                android:textColor="@color/light_peach"
                android:drawableLeft="@drawable/ic_baseline_stars_24"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="5dp">
            </TextView>

            <TextView
                android:id="@+id/text_project_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROJECT TAG"
                android:fontFamily="@font/ostrich"
                android:textColor="@color/light_peach"
                android:drawableLeft="@drawable/ic_baseline_follow_the_signs_24"
                android:textSize="15dp"
                android:gravity="center"
                android:padding="5dp">
            </TextView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="-30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_photo"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="4"
                    android:src="@drawable/test_photo"
                    app:civ_border_color="@color/deep_pipe_green"
                    app:civ_border_width="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/image_photo">

                    <TextView
                        android:id="@+id/initiator_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INITIATOR:"
                        android:fontFamily="@font/ostrich"
                        android:textSize="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp">
                    </TextView>
                    <TextView
                        android:id="@+id/text_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TESTNAME TESTSURNAME"
                        android:fontFamily="@font/ostrich"
                        android:textSize="15dp"
                        android:layout_toEndOf="@id/initiator_label">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <include
            android:id="@+id/project_skills"
            layout="@layout/panel_skills" />

    </LinearLayout>

</android.support.v7.widget.CardView>