<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:elevation="15dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Name" />

        <TextView
            android:id="@+id/text_project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Description" />

        <include
            android:id="@+id/project_initiator"
            layout="@layout/item_recycler_mini_user" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_project_participants"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <include
            android:id="@+id/project_skills"
            layout="@layout/panel_skills" />

        <TextView
            android:id="@+id/text_project_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>