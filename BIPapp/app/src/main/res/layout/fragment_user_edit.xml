<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.FragmentUserEdit"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/deep_pipe_green"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/relative_layout_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_wrapper"
                android:layout_width="155dp"
                android:layout_height="155dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/light_peach"
                android:layout_centerVertical="true">>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/user_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_photo" />

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>

            <ImageButton
                android:id="@+id/camera_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_peach"
                android:background="@drawable/ic_baseline_flip_camera_ios_24"
                android:text="+/-"
                android:fontFamily="@font/ostrich"
                android:textColor="@color/deep_pipe_green"
                android:layout_toRightOf="@+id/cardview_wrapper"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="140dp"
                android:elevation="50dp">
            </ImageButton>

        </RelativeLayout>

        <TextView
            android:id="@+id/textview_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestName TestSurname"
            android:textColor="@color/light_peach"
            android:textSize="50sp"
            android:fontFamily="@font/ostrich"
            android:layout_toRightOf="@+id/relative_layout_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
        </TextView>

        <TextView
            android:id="@+id/textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_full_name"
            android:text="testnick_name_6666"
            android:textColor="@color/light_peach"
            android:textSize="15dp"
            android:fontFamily="@font/ostrich"
            android:layout_toRightOf="@+id/relative_layout_photo"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_my_information_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="My information is..."
                android:textSize="50sp"
                android:textColor="@color/deep_pipe_green"
                android:fontFamily="@font/ostrich">
            </TextView>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/deep_pipe_green"
            android:hint="Full Name"
            android:layout_marginBottom="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:text="ivan testorio"
                android:textColor="@color/deep_pipe_green">

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/deep_pipe_green"
            android:hint="Age"
            android:layout_marginBottom="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_child_friendly_24"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:text="18"
                android:textColor="@color/deep_pipe_green">

            </android.support.design.widget.TextInputEditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/deep_pipe_green"
            android:hint="Bio"
            android:layout_marginBottom="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_biography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_campaign_24"
                android:drawablePadding="10dp"
                android:text="Android developer, C++ also"
                android:textColor="@color/deep_pipe_green">

            </android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_my_skills_are"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="My skills are..."
                android:textSize="50sp"
                android:textColor="@color/deep_pipe_green"
                android:fontFamily="@font/ostrich">
            </TextView>

        </RelativeLayout>

        <include layout="@layout/panel_skills"/>

        <Button
            android:id="@+id/button_save_edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:textColor="@color/deep_pipe_green"
            android:fontFamily="@font/ostrich"
            android:textSize="25dp"
            android:text="@string/button_save_edit_user">
        </Button>

    </LinearLayout>


</LinearLayout>